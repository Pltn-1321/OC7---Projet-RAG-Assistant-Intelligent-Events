# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# Mistral AI API Key - Get yours at: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
# PostgreSQL host (use 'postgres' for Docker, 'localhost' for local development)
POSTGRES_HOST=postgres

# PostgreSQL port
POSTGRES_PORT=5432

# PostgreSQL database name
POSTGRES_DB=rag_events

# PostgreSQL username
POSTGRES_USER=rag_user

# PostgreSQL password (CHANGE THIS IN PRODUCTION!)
POSTGRES_PASSWORD=changeme

# Connection pool size (number of persistent connections)
POSTGRES_POOL_SIZE=10

# Maximum overflow connections beyond pool size
POSTGRES_MAX_OVERFLOW=20

# Database URL (automatically constructed from above variables)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# PGADMIN CONFIGURATION (Optional - for database management)
# =============================================================================
# pgAdmin default email (for login)
PGADMIN_DEFAULT_EMAIL=admin@rag-events.local

# pgAdmin default password (CHANGE THIS IN PRODUCTION!)
PGADMIN_DEFAULT_PASSWORD=admin

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to FAISS index directory
INDEX_PATH=data/processed/faiss_index

# Maximum number of events to fetch from Open Agenda
MAX_EVENTS=10000

# Default location for event search
DEFAULT_LOCATION=paris


# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Mistral embedding model (dimension: 1024)
MISTRAL_EMBEDDING_MODEL=mistral-embed

# Mistral LLM model
# Options: mistral-small-latest, mistral-medium-latest, mistral-large-latest
LLM_MODEL=mistral-small-latest

# LLM temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.3

# Maximum tokens for LLM response
MAX_TOKENS=500


# =============================================================================
# RETRIEVAL SETTINGS
# =============================================================================
# Number of similar documents to retrieve
TOP_K_RESULTS=5

# Minimum similarity score threshold (0.0 to 1.0)
MIN_SIMILARITY_SCORE=0.3


# =============================================================================
# API CONFIGURATION (FastAPI)
# =============================================================================
# API host
API_HOST=0.0.0.0

# API port
API_PORT=8000

# Enable API CORS
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8501


# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
# Streamlit port
STREAMLIT_PORT=8501

# Streamlit server address
STREAMLIT_SERVER_ADDRESS=0.0.0.0


# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable profiling
ENABLE_PROFILING=false

# Cache embeddings
CACHE_EMBEDDINGS=true


# =============================================================================
# FRONTEND CONFIGURATION (Vite)
# =============================================================================
# Backend API URL for frontend
VITE_API_URL=http://localhost:8000

# Application title
VITE_APP_TITLE=Dashboard RAG Events Marseille
