# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# Mistral AI API Key - Get yours at: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Open Agenda API Key (if required) - Get yours at: https://openagenda.com/
OPENAGENDA_API_KEY=your_openagenda_key_if_needed


# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to FAISS index directory
INDEX_PATH=data/indexes/faiss_index

# Maximum number of events to fetch from Open Agenda
MAX_EVENTS=1000

# Default location for event search
DEFAULT_LOCATION=paris


# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Embedding model from HuggingFace
# Options: sentence-transformers/all-MiniLM-L6-v2 (fast, 384 dim)
#          sentence-transformers/all-mpnet-base-v2 (better, 768 dim)
#          sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (multilingual)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Mistral LLM model
# Options: mistral-small-latest, mistral-medium-latest, mistral-large-latest
LLM_MODEL=mistral-small-latest

# LLM temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.3

# Maximum tokens for LLM response
MAX_TOKENS=500


# =============================================================================
# RETRIEVAL SETTINGS
# =============================================================================
# Number of similar documents to retrieve
TOP_K_RESULTS=5

# Minimum similarity score threshold (0.0 to 1.0)
MIN_SIMILARITY_SCORE=0.3


# =============================================================================
# API CONFIGURATION (if using FastAPI)
# =============================================================================
# API host
API_HOST=0.0.0.0

# API port
API_PORT=8000

# Enable API CORS
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501


# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
# Streamlit port
STREAMLIT_PORT=8501

# Streamlit server address
STREAMLIT_SERVER_ADDRESS=0.0.0.0


# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode
DEBUG=false

# Enable profiling
ENABLE_PROFILING=false

# Cache embeddings
CACHE_EMBEDDINGS=true
