# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# Mistral AI API Key - https://console.mistral.ai/
# Used for LLM (text generation) and embeddings (if embedding_provider=mistral)
MISTRAL_API_KEY=your_mistral_api_key_here

# Rebuild API Key (OPTIONAL)
# Used to protect the /rebuild endpoint - set a secure random string
# REBUILD_API_KEY=your_secure_rebuild_key_here

# OpenAgenda API Key (OPTIONAL)
# May be required for some Open Agenda API calls
# OPENAGENDA_API_KEY=your_openagenda_api_key_here


# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Embedding provider: "mistral" or "sentence-transformers"
# Default: mistral
EMBEDDING_PROVIDER=mistral

# Mistral embedding model (dimension: 1024)
# Default: mistral-embed
MISTRAL_EMBEDDING_MODEL=mistral-embed

# Sentence Transformers model (dimension: 768)
# Default: paraphrase-multilingual-mpnet-base-v2
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2


# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# Mistral LLM model for text generation
# Options: mistral-small-latest, mistral-medium-latest, mistral-large-latest
# Default: mistral-small-latest
LLM_MODEL=mistral-small-latest

# LLM temperature (0.0 = deterministic, 2.0 = very creative)
# Default: 0.7
LLM_TEMPERATURE=0.7

# Maximum tokens for LLM response
# Default: 1000
MAX_TOKENS=1000


# =============================================================================
# RETRIEVAL SETTINGS
# =============================================================================

# Number of top results to retrieve from FAISS
# Default: 5
TOP_K_RESULTS=5

# Minimum similarity score threshold (0.0 to 1.0)
# Default: 0.3
MIN_SIMILARITY_SCORE=0.3


# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Default location for event search
# Default: marseille
DEFAULT_LOCATION=marseille

# Maximum number of events to fetch from API
# Default: 10000
MAX_EVENTS=10000

# Path to FAISS index directory
# Default: data/indexes/faiss_index
INDEX_PATH=data/indexes/faiss_index

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Debug mode (enables verbose logging and profiling)
# Default: False
DEBUG=False


# =============================================================================
# API CONFIGURATION (FastAPI)
# =============================================================================

# API host address
# Default: 0.0.0.0
API_HOST=0.0.0.0

# API port
# Default: 8000
API_PORT=8000

# Enable CORS
# Default: True
ENABLE_CORS=True

# Allowed CORS origins (comma-separated)
# Default: http://localhost:3000,http://localhost:8501
CORS_ORIGINS=http://localhost:3000,http://localhost:8501


# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit server address
# Default: 0.0.0.0
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Streamlit port
# Default: 8501
STREAMLIT_PORT=8501


# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable profiling (for performance analysis)
# Default: False
ENABLE_PROFILING=False

# Cache embeddings to disk
# Default: True
CACHE_EMBEDDINGS=True
